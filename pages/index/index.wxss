/**index.wxss**/
.header{
  background: #0dc441;
  width:100%;
  height:88rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
  color:#fff;
  font-size:36rpx;
  position: fixed;
  top:0;
  z-index: 2;
}
.hot,.focus{
  width:120rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center; 
  background:#3dd067;
}
.hot{
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}
.hot1{
  background:#64d985;
}
.focu1{
  background:#3dd067;
}
.focus{
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.banner{
  height:68rpx;
  width:100%;
  background: white;
  opacity: 0.9;
  margin-bottom:24rpx;
  border-bottom:1rpx solid #cecdcc;
  position: fixed;
  top:88rpx;
  z-index: 2;
}
.banner view{
  width:33.33%;
  height:100%;
  float: left;
  color:#666;
  font-size:28rpx;
  text-align: center;
  line-height: 68rpx;
}
.banner .banner1{
  color:#0dc441;
  border-bottom:10rpx solid #0dc441;
}
.imgList{
  width:100%;
  height:374rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:20rpx 0;
}
.imgList .imgItem{
  width:48.6%;
  height:374rpx;
  box-sizing: border-box;
  border: 1rpx solid #e5e5e5;
}
.imgList .imgItem .imgItem_img{
  width:100%;
  height:314rpx;
  box-sizing: border-box;
  border-bottom:1rpx solid #e5e5e5;
}
.imgList .imgItem .imgItem_img image{
  width:100%;
  height:100%;
}
.imgList .imgItem .imgItem_text{
  width:100%;
  text-align: left;
  height:58rpx;
  line-height: 50rpx;
  text-indent: 28rpx;
}
.imgList .imgItem .imgItem_text text{
  font-size:24rpx;
  color:#333;
}
