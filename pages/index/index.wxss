.foot{
  width:100%;
  height:88rpx;
  box-sizing: border-box;
  border-top:1rpx solid #cbd7cc;
  position: fixed;
  bottom:0;
  background:white;
}
.foot .foot_l{
  width:33.125%;
  height:100%;
  float: left;
  box-sizing: border-box;
  padding:0 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.foot .foot_l .foot_l1{
  height:100%;
  width:25%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding:10rpx 0;
}
.foot .foot_l .foot_l1 image{
  width: 32rpx;
  height:32rpx;
}
.foot .foot_l .foot_l1 text{
  font-size:24rpx;
  color:#d2d2d1;
}
.foot .foot_c{
  width:33.75%;
  height:100%;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  box-sizing: border-box;
  padding-bottom:14rpx;
}
.foot .foot_c .image1{
  width:56rpx;
  height:50rpx;
  position: relative;
  z-index: 2;
}
.foot .foot_c .image2{
  width:105rpx;
  height:105rpx;
  position: absolute;
  bottom:0;
  z-index: 1;
}
.show{
  display: block;
}
.hide{
  display: none;
}