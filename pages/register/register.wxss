.login_head{
  width:100%;
  height:88rpx;
  background:#0dc441;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:32rpx;
  color:white;
}
.login_input{
  width:100%;
  height:330rpx;
  box-sizing: border-box;
  padding:0 30rpx;
  margin-bottom: 80rpx;
}
.login_input .input1{
  width:100%;
  height:110rpx;
  box-sizing: border-box;
  border-bottom:1rpx solid #7f7f7f;
  position: relative;
}
.login_input .input1 input{
  position: absolute;
  bottom:12rpx;
  font-size:28rpx;
}
.login_button{
  width:580rpx;
  height:88rpx;
  background:#0dc441;
  color:white;
  font-size:32rpx;
  word-spacing: 43rpx;
}